---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  callToAction = {},
  items = [],
  image = {},
} = Astro.props;
---

<section class="bg-primary-50 dark:bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 pt-12 md:pt-16">
    <div class="grid md:grid-cols-2 gap-16">
      <!-- Left Column: Text Content -->
      <div class="flex flex-col justify-center">
        {title && <h2 class="text-3xl md:text-4xl font-bold font-heading">{title}</h2>}
        {subtitle && <p class="text-muted dark:text-slate-400 mt-4 text-xl">{subtitle}</p>}
        {
          callToAction && callToAction.text && callToAction.href && (
            <div class="mt-8">
              <Button {...callToAction} />
            </div>
          )
        }
      </div>
      
      <!-- Right Column: Image or Items -->
      <div>
        {image && image.src ? (
          <div class="relative m-auto max-w-5xl">
            <img src={image.src} alt={image.alt} width={image.width} height={image.height} class="mx-auto rounded-lg shadow-lg" loading="lazy" decoding="async" />
          </div>
        ) : (
          <div class="flex items-start">
            <div class="flex flex-col gap-8 md:gap-12">
              {items.map((item) => (
                <div class="flex">
                  <div class="flex-shrink-0">
                    <div class="flex items-center justify-center h-12 w-12 rounded-full bg-primary text-white">
                      {item.icon && <Icon name={item.icon} class="w-6 h-6" />}
                    </div>
                  </div>
                  <div class="ml-4">
                    {item.title && <h3 class="text-lg font-medium leading-6 dark:text-white">{item.title}</h3>}
                    {item.description && <p class="mt-2 text-base text-muted dark:text-slate-400">{item.description}</p>}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

